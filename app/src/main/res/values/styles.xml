<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="android:backgroundTint">?attr/button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">?attr/background_color</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ToastTextView">
        <item name="android:id">@id/toastTextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@drawable/toast_background</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

</resources>